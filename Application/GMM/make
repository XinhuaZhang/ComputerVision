#/bin/bash

export OMP_NUM_THREADS=16
FLAG="--make -O2 -rtsopts -j4 -threaded -XBangPatterns" 
LIBS="-lgomp -lstdc++ -lblas"
OBJPATH="../../Classifier/LibLinear/"

ghc $FLAG $LIBS -i../../ TrainGMM.hs -o trainGMM
ghc $FLAG $LIBS -i../../ $OBJPATH/linear.o $OBJPATH/tron.o TrainFisher.hs -o trainFisher1
ghc $FLAG $LIBS -i../../ $OBJPATH/linear.o $OBJPATH/tron.o PredictFisher.hs -o predictFisher1